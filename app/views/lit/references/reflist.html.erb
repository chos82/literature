<p id="notice"><%= notice %></p>

<h1>Listing References for Reaction <%= params[:id]%></h1>

<% @items.each do |item| %>
<div>
  <% if !item['data']['DOI'].blank? %>
    <a href="https://dx.doi.org/<%=item['data']['DOI']%>"><%= display_authors item['data']['creators'] %>&nbsp;
    <%= item['data']['title'] %></a>
  <% elsif !item['data']['url'].blank? %>
    <a href="<%=item['data']['url']%>"><%= display_authors item['data']['creators'] %>&nbsp;
    <%= item['data']['title'] %></a>
  <% else %>
    <%= display_authors item['data']['creators'] %>&nbsp;
    <%= item['data']['title'] %>
  <% end %>
</div>
<% end %>

